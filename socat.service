[Unit]
Description=socat launcher
Before=roscore.service
# Requires=networking.service
 
[Service]
User=jetson
ExecStart=/usr/bin/screen -S roscore -ADm bash -l -c 'socat -d -d pty,raw,echo=0 pty,raw,echo=0'
Type=simple
Restart=always
RestartSec=3s
 
[Install]
WantedBy=multi-user.target
